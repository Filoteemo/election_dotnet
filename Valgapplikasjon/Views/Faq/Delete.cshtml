@model Valgapplikasjon.Models.FaqModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
}

<h1>Fjern FAQ innlegg</h1>

<h3>Er du sikker på at du vil slette dette?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaqSporsmal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaqSporsmal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaqSvar)
        </dt>
        <dd class="col-sm-10">
