@model Valgapplikasjon.Models.ValgModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Oppdater informasjon</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ValgId" />
            <div class="form-group">
                <label asp-for="Tittel" class="control-label"></label>
                <input asp-for="Tittel" class="form-control" />
                <span asp-validation-for="Tittel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartNominering" class="control-label"></label>
                <input asp-for="StartNominering" class="form-control" />
                <span asp-validation-for="StartNominering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SluttNominering" class="control-label"></label>
                <input asp-for="SluttNominering" class="form-control" />
                <span asp-validation-for="SluttNominering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartAvstemming" class="control-label"></label>
                <input asp-for="StartAvstemming" class="form-control" />
                <span asp-validation-for="StartAvstemming" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SluttAvstemming" class="control-label"></label>
                <input asp-for="SluttAvstemming" class="form-control" />
                <span asp-validation-for="SluttAvstemming" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontrollert" class="control-label"></label>
                <input asp-for="Kontrollert" class="form-control" />
                <span asp-validation-for="Kontrollert" class="text-danger"></span>
            </div>
                <input type="submit" value="Lagre" class="btn btn-primary btnEndreValg" />
        </form>
    </div>
</div> <br />

<div>
    <a class="btn btn-primary" asp-action="Index">Tilbake til valgoversikt</a>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
