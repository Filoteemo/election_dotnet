@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Roller</h1>
<a asp-action="Create" class="btn btn-secondary">Opprett en rolle</a>
<br><br>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Rollenavn</th><th>Slett</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>

             <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button name="@role.Name" type="submit" class="btn btn-sm btn-danger btnSlettRolle" >
                        Slett
                    </button>
                </form>
            </td>
        </tr>
    }
</table>